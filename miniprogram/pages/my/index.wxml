<cu-custom bgColor="bg-gradual-blue">
    <view slot="content">我的</view>
</cu-custom>
<view class="UCenter-bg">
    <image src="/assets/logo.png" class="png" mode="widthFix"></image>
    <view class="text-xl" style="margin-top:40rpx">
        <open-data type="userNickName"></open-data>
    </view>
    <view class="margin-top-sm">
        <text class="text-df">No: {{username}}</text>
    </view>
    <image src="/assets/wave.gif" mode="scaleToFill" class="gif-wave"></image>
</view>
<view class="padding flex text-center text-grey bg-white shadow-warp">
    <view class="flex flex-sub flex-direction solid-right">
        <view class="text-xxl text-orange">{{dayTime}}</view>
        <view class="margin-top-sm">
            <text class="cuIcon-attentionfill"></text>
            今日学习
        </view>
    </view>
    <view class="flex flex-sub flex-direction solid-right">
        <view class="text-xxl text-blue">{{allTime}}</view>
        <view class="margin-top-sm">
            <text class="cuIcon-favorfill"></text>
            累计学习
        </view>
    </view>
    <view class="flex flex-sub flex-direction">
        <view class="text-xxl text-green">{{countTime}}</view>
        <view class="margin-top-sm">
            <text class="cuIcon-rankfill"></text>
            连续学习
        </view>
    </view>
</view>
<view class="cu-list menu sm-border">
    <view class="cu-item arrow" bind:tap="onScancode">
        <view class="content">
            <text class="cuIcon-camerafill text-grey"></text>
            <text class="text-grey">打卡</text>
        </view>
    </view>
    <view class="cu-item arrow">
        <view class="content">
            <text class="cuIcon-newsfill text-grey"></text>
            <text class="text-grey">我的借阅证</text>
        </view>
    </view>
    <view class="cu-item arrow">
        <view class="content">
            <text class="cuIcon-paintfill text-grey"></text>
            <text class="text-grey">推广大使</text>
        </view>
    </view>
    <view class="cu-item arrow">
        <view class="content">
            <text class="cuIcon-communityfill text-grey"></text>
            <text class="text-grey">我的消息</text>
        </view>
    </view>
    <view class="cu-item arrow">
        <view class="content">
            <text class="cuIcon-circlefill text-grey"></text>
            <text class="text-grey">疫情防控</text>
        </view>
    </view>
</view>
<view class="mytarBar">
    <view class="cu-bar tabbar bg-white">
        <view class="action" bind:tap="onIndexPage">
            <view class="cuIcon-cu-image">
                <image src="/assets/home_fill_gray.png"></image>
            </view>
            <view class="text-gray">首页</view>
        </view>
        <view class="action">
            <view class="cuIcon-cu-image" bind:tap="onRulePage">
                <image src="/assets/form_fill_gray.png"></image>
            </view>
            <view class="text-gray">使用规则</view>
        </view>
        <view class="action">
            <view class="cuIcon-cu-image">
                <image src="/assets/people_fill.png"></image>
            </view>
            <view class="text-cyan">我的</view>
        </view>
    </view>
</view>
<l-toast />
